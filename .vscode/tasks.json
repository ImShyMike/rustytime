{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run rustytime backend",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}/rustytime"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": "$rustc"
		},
		{
			"label": "Run frontend",
			"type": "shell",
			"command": "bun",
			"args": [
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": "$eslint-stylish"
		},
		{
			"label": "Run rustytime",
			"dependsOrder": "parallel",
			"dependsOn": [
				"Run rustytime backend",
				"Run frontend"
			],
			"problemMatcher": []
		}
	]
}